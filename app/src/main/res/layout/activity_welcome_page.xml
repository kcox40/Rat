<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.gatecg.cs2340.rattitudem4.WelcomePageActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/logout"
            android:layout_width="363dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.00"
            android:onClick="goBackBtn"
            android:text="Log Out"
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="193dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:id="@+id/rat_reports"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="52dp"
            android:onClick="ratReportsButton"
            android:text="Rat Reports" />

        <Button
            android:id="@+id/add_new_report_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:onClick="addNewRatReportButton"
            android:text="Add New Rat Report"
            android:layout_below="@+id/rat_report_map_button"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/rat_report_map_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/rat_reports"
            android:layout_marginTop="14dp"
            android:onClick="ratReportMapsButton"
            android:text="Rat Map!" />

        <TextView
            android:id="@+id/id"
            android:layout_width="360dp"
            android:layout_height="78dp"
            android:layout_weight="0.06"
            android:text="Welcome To Rattitude"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="88dp"
            tools:layout_editor_absoluteY="115dp" />

        <Button
            android:id="@+id/RatChartBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/logout"
            android:layout_below="@+id/add_new_report_button"
            android:layout_marginTop="12dp"
            android:onClick="ratReportChartsButton"
            android:text="Rat Charts!" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
